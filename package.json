{
  "name": "webpack-hhvm-php-loader",
  "version": "1.0.2",
  "description": "A loader for webpack that executes hhvm scripts",
  "license": "MIT",
  "repository": "justsml/webpack-hhvm-php-loader",
  "author": "Dan Levy @justsml",
  "homepage": "https://github.com/justsml/webpack-hhvm-php-loader",
  "bugs": "https://github.com/justsml/webpack-hhvm-php-loader/issues",
  "main": "dist/cjs.js",
  "engines": {
    "node": ">= 10.13.0"
  },
  "scripts": {
    "start": "yarn build -- -w",
    "clean": "del-cli dist",
    "prebuild": "yarn clean",
    "build": "cross-env NODE_ENV=production babel src -d dist --copy-files",
    "commitlint": "commitlint --from=master",
    "security": "npm audit",
    "lint:prettier": "prettier --list-different .",
    "lint:js": "eslint --cache .",
    "lint": "yarn-run-all -l -p \"lint:**\"",
    "test:only": "cross-env NODE_ENV=test jest",
    "test:watch": "yarn test:only -- --watch",
    "test:coverage": "yarn test:only -- --collectCoverageFrom=\"src/**/*.js\" --coverage",
    "pretest": "yarn lint",
    "test": "yarn test:coverage",
    "prepare": "yarn build",
    "release": "standard-version",
    "defaults": "webpack-defaults"
  },
  "files": [
    "dist"
  ],
  "peerDependencies": {
    "webpack": "^4.0.0 || ^5.0.0"
  },
  "dependencies": {
    "execa": "^4.1.0",
    "loader-utils": "^2.0.0",
    "schema-utils": "^3.0.0"
  },
  "devDependencies": {
    "@babel/cli": "^7.11.6",
    "@babel/core": "^7.11.6",
    "@babel/preset-env": "^7.11.5",
    "@commitlint/cli": "^11.0.0",
    "@commitlint/config-conventional": "^11.0.0",
    "@webpack-contrib/defaults": "^6.3.0",
    "@webpack-contrib/eslint-config-webpack": "^3.0.0",
    "babel-jest": "^26.5.2",
    "cross-env": "^7.0.2",
    "del": "^6.0.0",
    "del-cli": "^3.0.1",
    "eslint": "^7.10.0",
    "eslint-config-prettier": "^6.12.0",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-prettier": "^3.1.4",
    "husky": "^4.3.0",
    "jest": "^26.5.2",
    "lint-staged": "^10.4.0",
    "memfs": "^3.2.0",
    "yarn-run-all": "^4.1.5",
    "prettier": "^2.1.2",
    "standard-version": "^9.0.0",
    "webpack": "^4.44.2"
  },
  "keywords": [
    "webpack",
    "loader",
    "hacklang",
    "hhvm",
    "php"
  ]
}
